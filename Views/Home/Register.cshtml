
@{
    Layout = null;
}
@model UserDetailsModel;
@{
    List<string> Types = new List<string>();
    Types.Add("Agent");
    Types.Add("Buyer");
    IEnumerable<string> userTypes = Types;
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="~/css/Register/style.css"  />
    <title>Sign in & Sign up Form</title>
  </head>
  <body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form method="post" asp-action="Login" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="UserName" type="text" placeholder="Username" />

                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="UserPassword" type="password" placeholder="Password" />
                    </div>
                    <span asp-validation-for="UserPassword" class="text-danger"></span>

                    <input type="submit" value="Login" class="btn solid" />

                </form>
                <form asp-action="Register" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div class="check-field ">
                        @foreach (var utype in userTypes)
                        {
                            <input type="radio" asp-for="UserType" value="@utype" class="check" />
                            <label asp-for="UserType">@utype</label>
                        }

                    </div>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="UserName" type="text" placeholder="Username" />

                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="UserEmail" type="email" placeholder="Email" />
                    </div>

                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="UserPassword" type="password" placeholder="Password" />

                    </div>
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="ConformPassword" placeholder="Confirm Password" />

                    </div>
                    <span asp-validation-for="ConformPassword"></span>
                    <div class="input-field">
                        <i class="fas fa-phone"></i>
                        <input asp-for="UserMobileNumber" type="text" placeholder="Mobile number" />

                    </div>
                    <span asp-validation-for="UserMobileNumber"></span>
                    <input type="submit" class="btn" value="Sign up" />

                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                        ex ratione. Aliquid!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/images/log.svg" class="image" alt="" asp-append-version="true" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                        laboriosam ad deleniti.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/images/register.svg" class="image" alt="" asp-append-version="true" />
            </div>
        </div>
    </div>

    <script src="~/js/Register/app.js"></script>

  </body>
</html>