
@{
    Layout = null;
}
@model UserDetail;
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="~/css/Register/style.css"  />
    <title>Sign in & Sign up Form</title>
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form method="post"  action="#" class="sign-in-form" >
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input asp-for="UserName" type="text" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Password" />
            </div>
            <input type="submit" value="Login" class="btn solid" />
         
          </form>
                <form asp-controller="Register" asp-action="SignUp" class="sign-up-form">
            <h2 class="title">Sign up</h2>
                    <div class="check-field ">
                        <input  type="radio" asp-for="UserType" name="user_type" value=2 class="check" />
                        <label for="user_type">Agent</label>
                        <input  type="radio" name="user_type" value=3 class="check" />
                        <label for="user_type">user</label>
                    </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
                        <input asp-for="UserName" type="text" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input asp-for="UserEmail" type="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
                        <input asp-for="UserPassword" type="password" id="txtPassword" placeholder="Password" />
            </div>
            <div class="input-field">
                <i class="fas fa-lock"></i>
                        <input id="txtConfirmPassword" type="password" placeholder="Confirm Password" />
                        
              </div>
                    <input type="submit" class="btn" value="Sign up" onclick="return Validate()" />
          
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
              ex ratione. Aliquid!
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="img/log.svg" class="image" alt="" asp-append-version="true" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
              laboriosam ad deleniti.
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
                <img src="img/register.svg" class="image" alt="" asp-append-version="true" />
        </div>
      </div>
    </div>

    <script src="~/js/Register/app.js"></script>

  </body>
</html>